<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".constraintLayout.MyConstraintLayout">

    <com.iffy.mianshi.view.surfaceView.MSurfaceView
        android:layout_weight="3" android:layout_width="match_parent"
                                               android:id="@+id/suf"
                                               android:layout_height="match_parent"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="1px" android:background="@color/colorAccent"/>

    <com.iffy.mianshi.view.surfaceView.MTextureView
        android:layout_weight="3" android:layout_width="match_parent"
                                               android:id="@+id/texture"
                                               android:layout_height="match_parent"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="1px" android:background="@color/colorAccent"/>
    <ListView android:layout_width="match_parent" android:layout_weight="2" android:id="@+id/list"
              android:layout_height="match_parent"
              android:background="#00ffff"/>

    <!--用于设置背景色-->


</LinearLayout>