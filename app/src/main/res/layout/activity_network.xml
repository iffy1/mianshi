<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".network.NetWorkActivity">
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/volley_btn"
            android:text="get Via Volley"/>
    <ImageView android:layout_width="180dp" android:layout_height="180dp" android:id="@+id/volley_image_view"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/volley_tv"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                  android:background="@color/colorPrimary"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/okhttp_btn"
            android:text="get Via okhttp3"/>
    <ImageView android:layout_width="180dp" android:layout_height="180dp" android:id="@+id/okhttp_image_view"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/okhttp_tv"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                  android:background="@color/colorPrimary"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/retrofit_btn"
            android:text="get Via retrofit"/>
    <ImageView android:layout_width="180dp" android:layout_height="180dp" android:id="@+id/retrofit_image_view"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/retrofit_tv"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                  android:background="@color/colorPrimary"/>


</LinearLayout>