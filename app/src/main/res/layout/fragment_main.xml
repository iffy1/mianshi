<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        tools:context=".activity与fragment通信.MainActivity">

    <TextView
            android:id="@+id/fragment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是fragment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button android:id="@+id/fragment_btn" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="让activity说你好"/>

</LinearLayout>