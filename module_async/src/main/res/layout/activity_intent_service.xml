<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".constraintLayout.MyConstraintLayout">
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="下载A"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/button_internt_service_A" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="188dp" android:layout_marginStart="44dp"
            app:layout_constraintEnd_toStartOf="@+id/button_internt_service_B" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.272"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="下载B"
            android:id="@+id/button_internt_service_B"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="188dp" android:layout_marginEnd="84dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageView_intentA" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="280dp" app:srcCompat="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.166"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageView_intentB" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="280dp" app:srcCompat="@mipmap/ic_launcher"
            app:layout_constraintHorizontal_bias="0.532"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/imageView_intentA"
            android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>